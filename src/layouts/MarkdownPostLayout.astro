---
import BaseLayout from "./BaseLayout.astro";
import Prose from "../components/Prose.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <Prose>
    <article
      class="prose dark:prose-invert prose-h1:font-bold prose-h1:text-2xl prose-a:text-blue-600 prose-p:text-justify prose-img:rounded-xl prose-headings:underline mx-auto my-8 max-w-3xl"
    >
      <slot />
    </article>
  </Prose>
</BaseLayout>
